<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.srombs.weather.ViewWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/zip_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip Code"/>

    <Button
        android:id="@+id/submit_zipcode_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Weather"
        android:layout_below="@id/zip_input"/>

    <Button
        android:id="@+id/submit_gps_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Location"
        android:layout_below="@id/submit_zipcode_btn"/>


    <TextView
        android:id="@+id/current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_gps_btn"
        android:text="@string/current_temperature"/>

    <TextView
        android:id="@+id/current_clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_temp"
        android:text="@string/current_sky_conditions"/>

    <TextView
        android:id="@+id/current_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_clouds"
        android:text="@string/current_wind_conditions"/>

    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>

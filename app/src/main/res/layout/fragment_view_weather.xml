<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.srombs.weather.ViewWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/zip_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip Code"/>

    <Button
        android:id="@+id/submit_zipcode_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Weather"
        android:layout_below="@id/zip_input"/>

    <TextView
        android:id="@+id/current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_zipcode_btn"
        android:text="Fake Text"/>

</RelativeLayout>
